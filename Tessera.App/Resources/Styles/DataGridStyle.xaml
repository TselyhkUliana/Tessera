<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:converters="clr-namespace:Tessera.App.Converters">

  <converters:MaterialHasStandardConverter x:Key="MaterialHasStandardConverter"/>
  <converters:SortamentHasStandardConverter x:Key="SortamentHasStandardConverter"/>

  <Style TargetType="DataGrid">
    <Setter Property="AutoGenerateColumns" Value="False"/>
    <Setter Property="Background" Value="{StaticResource Brush.Transparent}"/>
    <Setter Property="GridLinesVisibility" Value="None"/>
    <Setter Property="HeadersVisibility" Value="Column"/>
  </Style>
  <Style TargetType="DataGridRow">
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{StaticResource Brush.DataGridRow.Background}"/>
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style TargetType="DataGridCell" x:Key="DataGridCellStyle">
    <Setter Property="BorderBrush" Value="{StaticResource Brush.DataGridCell.BorderBrush}"/>
    <Setter Property="BorderThickness" Value="0 0 1 1"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="{StaticResource Brush.DataGrid.Cell.SelectedBase}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.DataGridCell.Selected.Foreground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.DataGrid.Cell.SelectedBase}"/>
      </Trigger>
    </Style.Triggers>
  </Style>
  <Style TargetType="DataGridCell" x:Key="MaterialCellStyle" BasedOn="{StaticResource DataGridCellStyle}">
    <Style.Triggers>
      <DataTrigger Binding="{Binding Material, Converter={StaticResource MaterialHasStandardConverter}}" Value="False">
        <Setter Property="Background" Value="{StaticResource Brush.DataGridCell.HasStandard}"/>
        <Setter Property="ToolTip" Value="Материал должен содержать стандарт (например, ГОСТ, ISO и т.д.)"/>
      </DataTrigger>
      <DataTrigger Binding="{Binding Material, Converter={StaticResource MaterialHasStandardConverter}}" Value="True">
        <Setter Property="ToolTip" Value="{Binding Material}"/>
      </DataTrigger>
    </Style.Triggers>
  </Style>
  <Style TargetType="DataGridCell" x:Key="SortamentCellStyle" BasedOn="{StaticResource DataGridCellStyle}">
    <Style.Triggers>
      <DataTrigger Binding="{Binding Sortament, Converter={StaticResource SortamentHasStandardConverter}}" Value="False">
        <Setter Property="Background" Value="{StaticResource Brush.DataGridCell.HasStandard}"/>
        <Setter Property="ToolTip" Value="Сортамент должен содержать стандарт (например, ГОСТ, ISO и т.д.)"/>
      </DataTrigger>
      <DataTrigger Binding="{Binding Sortament, Converter={StaticResource SortamentHasStandardConverter}}" Value="True">
        <Setter Property="ToolTip" Value="{Binding Sortament}"/>
      </DataTrigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>