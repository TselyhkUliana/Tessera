<ResourceDictionary x:Class="Tessera.App.Resources.Styles.ComboBoxStyles"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
    <Setter Property="IsEditable" Value="True"/>
    <Setter Property="StaysOpenOnEdit" Value="True"/>
    <Setter Property="IsTextSearchEnabled" Value="False"/>
  </Style>
  <Style TargetType="ComboBox" x:Key="MaterialComboBoxStyle" BasedOn="{StaticResource ComboBoxStyle}">
    <EventSetter Event="Loaded" Handler="ComboBoxMaterial_Loaded"/>
  </Style>
  <Style TargetType="ComboBox" x:Key="SortamentComboBoxStyle" BasedOn="{StaticResource ComboBoxStyle}">
    <EventSetter Event="Loaded" Handler="ComboBoxSortament_Loaded"/>
  </Style>
</ResourceDictionary>