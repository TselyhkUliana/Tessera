<Window x:Class="Tessera.App.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tessera.App"
        xmlns:vm="clr-namespace:Tessera.App.ViewModel"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

  <DockPanel>
    <DataGrid ItemsSource="{Binding SectionDefinitions}" SelectedItem="{Binding SelectedSectionDefinition}" AutoGenerateColumns="False" CanUserAddRows="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Материал" Binding="{Binding Material}"/>
        <DataGridTextColumn Header="Сортамент" Binding="{Binding SectionProfile}"/>
        <DataGridTextColumn Header="Типоразмер" Binding="{Binding TypeSize}"/>
        <DataGridTextColumn Header="Экземпляр сортамента" Binding="{Binding SectionInstance}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>
