<Window x:Class="Tessera.App.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tessera.App"
        xmlns:vm ="clr-namespace:Tessera.App.ViewModel"
        d:DataContext="{d:DesignData Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

  <Window.Resources>
    <Style TargetType="DataGrid">
      <Setter Property="AutoGenerateColumns" Value="False"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="GridLinesVisibility" Value="None"/>
      <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>
    <Style TargetType="DataGridRow">
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#dae6f2"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style TargetType="DataGridCell">
      <Setter Property="BorderBrush" Value="#e0e0e0"/>
      <Setter Property="BorderThickness" Value="0 0 1 1"/>
      <Style.Triggers>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="#ccdbeb"/>
          <Setter Property="Foreground" Value="#376cf0"/>
          <Setter Property="BorderBrush" Value="#ccdbeb"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style TargetType="ComboBox">
      <Setter Property="IsEditable" Value="True"/>
      <Setter Property="StaysOpenOnEdit" Value="True"/>
      <Setter Property="IsTextSearchEnabled" Value="False"/>
    </Style>

    <DataTemplate x:Key="MaterialCell">
      <TextBlock Text="{Binding Material}"/>
    </DataTemplate>
    <DataTemplate x:Key="MaterialCellEditing">
      <ComboBox ItemsSource="{Binding DataContext.SuggestedMaterials, RelativeSource={RelativeSource AncestorType=Window}}" Text="{Binding Material, UpdateSourceTrigger=PropertyChanged}" Loaded="ComboBoxMaterial_Loaded"/>
    </DataTemplate>
    <DataTemplate x:Key="SectionProfileCell">
      <TextBlock Text="{Binding SectionProfile}"/>
    </DataTemplate>
    <DataTemplate x:Key="SectionProfileCellEditing">
      <ComboBox ItemsSource="{Binding DataContext.SuggestedProfiles, RelativeSource={RelativeSource AncestorType=Window}}" Text="{Binding SectionProfile, UpdateSourceTrigger=PropertyChanged}" Loaded="ComboBoxProfiles_Loaded"/>
    </DataTemplate>
    <DataTemplate x:Key="SectionInstanceCell">
      <TextBlock Text="{Binding SectionInstance}" />
    </DataTemplate>
    <DataTemplate x:Key="SectionInstanceCellEditing">
      <ComboBox ItemsSource="{Binding DataContext.SuggestedInstances, RelativeSource={RelativeSource AncestorType=Window}}" Text="{Binding SectionInstance, UpdateSourceTrigger=PropertyChanged}" Loaded="ComboBoxInstance_Loaded"/>
    </DataTemplate>
  </Window.Resources>

  <DockPanel>
    <DataGrid x:Name="datagrid" ItemsSource="{Binding SectionDefinitions}" SelectedItem="{Binding CurrentSection}">
      <DataGrid.ContextMenu>
        <ContextMenu ItemsSource="{Binding Commands}">
          <ContextMenu.ItemTemplate>
            <DataTemplate>
              <MenuItem Header="{Binding Caption}" ToolTip="{Binding Hint}" Command="{Binding}"/>
            </DataTemplate>
          </ContextMenu.ItemTemplate>
        </ContextMenu>
      </DataGrid.ContextMenu>
      <DataGrid.Columns>
        <DataGridTemplateColumn Header="Материалы" CellTemplate="{StaticResource MaterialCell}" CellEditingTemplate="{StaticResource MaterialCellEditing}"/>
        <DataGridTemplateColumn Header="Сортаменты" CellTemplate="{StaticResource SectionProfileCell}" CellEditingTemplate="{StaticResource SectionProfileCellEditing}"/>
        <!--<DataGridTemplateColumn Header="Типоразмеры">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding TypeSize}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate>
              <ComboBox/>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>-->
        <DataGridTemplateColumn Header="Экземпляры сортаментов" CellTemplate="{StaticResource SectionInstanceCell}" CellEditingTemplate="{StaticResource SectionInstanceCellEditing}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>